"general": {
       	"node_id":"",
        "reply_timeout": "5s",
        "logger": "CGRATES_LOGGER",
        "log_level": CGRATES_LOG_LEVEL,
},


"data_db": {
        "db_type": "mongo",
        "db_host": "MONGO_HOST",
        "db_name": "MONGO_DATADB",
        "db_port": 27017,
},

"stor_db": {
        "db_type": "mongo",
        "db_host": "MONGO_HOST",
        "db_name": "MONGO_STORDB",
        "db_port": 27017,
},

"rpc_conns": {
	"firstconn": {
		"strategy": "*first",
		"conns": [CGRATES_CONNS],
	},
  "allconn": {
		"strategy": "*broadcast",
		"conns": [CGRATES_CONNS],
	},
},

"sessions": {
	"enabled": CGRATES_SESSION_ENABLED,
	"rals_conns": ["firstconn"],
	"cdrs_conns": ["firstconn"],
	"resources_conns": ["firstconn"],
	"suppliers_conns": ["firstconn"],
	"attributes_conns": ["firstconn"],
	"stats_conns": ["firstconn"],
	"thresholds_conns": ["firstconn"],
	"chargers_conns": ["firstconn"],
	"debit_interval": "5s",
	"channel_sync_interval":"7s",
},

"kamailio_agent": {
        "enabled": CGRATES_KAMAILIO_ENABLED,
        "evapi_conns":[{"address": "CGRATES_KAMAILIO_EVAPI_HOST:CGRATES_KAMAILIO_EVAPI_PORT", "reconnects": 10}],
        "sessions_conns": ["*internal"],
        "create_cdr": true,
},

}
