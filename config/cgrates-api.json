"general": {
       	"node_id": "CGRATES_NAME",
	"reply_timeout": "5s",
        "logger": "CGRATES_LOGGER",
        "log_level": CGRATES_LOG_LEVEL,
},


"listen": {
	"http": "0.0.0.0:2080",
},


"rpc_conns": {
  "firstconn": {
		"strategy": "*first",
		"conns": [CGRATES_CONNS],
	},
  "roundrobinconn": {
		"strategy": "*round_robin",
		"conns": [CGRATES_CONNS],
	},
  "randomconn": {
		"strategy": "*random",
		"conns": [CGRATES_CONNS],
	},
  "ratioconn": {
		"strategy": "*ratio",
		"conns": [CGRATES_CONNS],
	},
  "allconn": {
		"strategy": "*broadcast",
		"conns": [CGRATES_CONNS],
	},
},

 "apiers": {
 	"enabled": true,
 	"caches_conns":[
    "allconn"
  ],
 	"scheduler_conns": [
    "CGRATES_CONN_STRATEGY",
    ],
 	"attributes_conns": [
    "CGRATES_CONN_STRATEGY",
    ],
 },

}
