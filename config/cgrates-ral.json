"general": {
       	"node_id": "CGRATES_NAME",
	"reply_timeout": "5s",
        "logger": "CGRATES_LOGGER",
        "log_level": CGRATES_LOG_LEVEL,
},


"listen": {
	"rpc_json": "0.0.0.0:2012",
	"rpc_gob": "0.0.0.0:2013",
	"http": "0.0.0.0:2080",
},


"data_db": {
        "db_type": "mongo",
        "db_host": "MONGO_HOST",
        "db_name": "MONGO_DATADB",
        "db_port": 27017,
},

"stor_db": {
        "db_type": "mongo",
        "db_host": "MONGO_HOST",
        "db_name": "MONGO_STORDB",
        "db_port": 27017,
},

"rpc_conns": {
  "internalconn": {
		"strategy": "*first",
		"conns": [
			{"address": "CGRATES_NAME:2012", "transport":"*json"},
		],
	},
  "firstconn": {
		"strategy": "*first",
		"conns": [CGRATES_CONNS],
	},
  "roundrobinconn": {
		"strategy": "*round_robin",
		"conns": [CGRATES_CONNS],
	},
  "randomconn": {
		"strategy": "*random",
		"conns": [CGRATES_CONNS],
	},
  "ratioconn": {
		"strategy": "*ratio",
		"conns": [CGRATES_CONNS],
	},
  "allconn": {
		"strategy": "*broadcast",
		"conns": [CGRATES_CONNS],
	},
},


"schedulers": {
	"enabled": true,
},


"rals": {
	"enabled": true,
	"thresholds_conns": [
    "CGRATES_CONN_STRATEGY",
	],
	"stats_conns": [
    "CGRATES_CONN_STRATEGY",
	],
},


"cdrs": {
	"enabled": true,
	"stats_conns": [
    "CGRATES_CONN_STRATEGY",
	],
	"sessions_cost_retries": 5,
},


"chargers": {
	"enabled": true,
	"attributes_conns": [
    "CGRATES_CONN_STRATEGY",
	],
},


"attributes": {
	"enabled": true,
	"string_indexed_fields": ["Account"],
},


"resources": {
	"enabled": true,
	"string_indexed_fields": ["Account"],
},


"stats": {
	"enabled": true,
	"string_indexed_fields": ["Account","RunID","Destination"],
},


"thresholds": {
	"enabled": true,
	"string_indexed_fields": ["Account"],
},

 "filters": {								// Filters configuration (*new)
 	"stats_conns": [
    "CGRATES_CONN_STRATEGY",
  ],
 	"resources_conns": [
    "CGRATES_CONN_STRATEGY",
    ],
 },

"suppliers": {
	"enabled": true,
	"rals_conns": [
    "CGRATES_CONN_STRATEGY",
	],
	"resources_conns": [
    "CGRATES_CONN_STRATEGY",
	],
	"stats_conns": [
    "CGRATES_CONN_STRATEGY",
	],
	"string_indexed_fields": ["Account"],
},

 "analyzers":{
 	"enabled": true
 },

 "apiers": {
 	"enabled": true,
 	"caches_conns":[
    "CGRATES_CONN_STRATEGY"
  ],
 	"scheduler_conns": [
    "allconn",
    ],
 	"attributes_conns": [
    "CGRATES_CONN_STRATEGY",
    ],
 },

}
